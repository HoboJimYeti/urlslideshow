{
    "name": "UrlSlideshow",
    "author": "proddi@splatterladder.com",
    "homepage_url": "https://github.com/proddi/urlslideshow",

    "version": "0.4.0",
    "manifest_version": 2,

    "icons": {
           "16": "icons/slideshow-24.png",
           "48": "icons/slideshow-48.png",
          "128": "icons/slideshow-128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icons/slideshow-24.png",
            "38": "icons/slideshow-48.png"
        },
        "default_title": "Url Slideshow"
    },

    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    },

    "background": {
        "scripts": ["js/SlideShow.js", "js/background.js"],
        "persistent": true
    },

    "permissions": [
      "tabs"
    ]
}
